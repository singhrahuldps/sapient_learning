node {

   def mvnHome
   
   stage('Preparation') {
     git branch: 'week1', url: 'https://github.com/singhrahuldps/sapient_learning.git'
     mvnHome = tool 'M3' 
   }

   stage('Build') {
    sh 'cd myApp'
    bat(/"$(mvnHome)\bin\mvn" -Dmaven.test.failure.ignore clean install/)
   }

   stage('Results') {
     junit 'target/surefire-reports/**/*.xml'
     archive 'target/*.jar'
   }

}