node {
   
   pipelineTriggers { cron('H 10 * * *') }

   stage('Preparation') {
     git branch: 'week1', url: 'https://github.com/singhrahuldps/sapient_learning.git'
   }

   stage('Build') {
    bat 'cd myApp && mvn -Dmaven.test.failure.ignore clean install'
   }

   stage('Results') {
     junit 'myApp/target/surefire-reports/**/*.xml'
     archiveArtifacts 'myApp/target/*.jar'
   }

}